{{#if currentUser.admin}}

<h4>Edit {{message.username}}'s message</h4>
<h5>Posted on {{date}}</h5>
<form action="/{{message.url}}/edit" method="POST" autocomplete="off">
  <div class="form-group">
    <label for="message"></label>
    <textarea name="content" spellcheck="true" rows="5" cols="31">{{message.content}}</textarea>
    
  </div>
  <div class="form-group">
    <button type="submit">Edit this message</button>
  </div>
</form>

{{/if}}