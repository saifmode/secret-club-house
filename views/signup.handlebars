<h1>Sign up</h1>
{{>errors}}
<form action="/signup" method="POST">
  <div class="form-group">
    <label for="username"></label>
    <input type="text" name="username" id="username" autocomplete="off" placeholder="New username"/>
  </div>
  <div class="form-group">
    <label for="password"></label>
    <input type="password" name="password" placeholder="New password" />
  </div>
  <div class="form-group">
    <label for="password"></label>
    <input type="password" name="confirm" placeholder="Confirm password" />
  </div>
  <div class="form-group">
    <label for="invite"><div class="secret">Psst... the secret invite code is <i>secret123</i> ;)</div></label>
    <input type="password" name="invite" placeholder="Secret code" />
  </div>
  
  <div class="form-group">
    <label for="admin">Sign up as admin?</label>
    <input type="checkbox" name="admin"><br><br>
    <button type="submit">Sign up!</button>
  </div>
</form>

<script>
const username = document.getElementById("username");
username.focus();
</script>